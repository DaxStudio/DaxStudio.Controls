<Window x:Class="DaxStudio.TreeGrid.Example.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DAX Studio TreeGrid Examples" 
        Width="400" 
        Height="250"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Select an example to run:"
                   FontSize="18"
                   Margin="20,20,20,10"/>
        
        <StackPanel Grid.Row="1"
                    Margin="20,10,20,20"
                    VerticalAlignment="Center">
            <Button x:Name="TreeGridExampleButton"
                    Content="TreeGrid Example"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,20"
                    Click="TreeGridExampleButton_Click"/>
            
            <Button x:Name="QueryPlanTreeExampleButton"
                    Content="Query Plan Tree Example"
                    Height="40"
                    FontSize="14"
                    Click="QueryPlanTreeExampleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>