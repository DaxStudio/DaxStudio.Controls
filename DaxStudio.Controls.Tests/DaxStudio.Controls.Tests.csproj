<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net8.0-windows</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup>
    <UseAppHost>true</UseAppHost>
    <GenerateProgramFile>true</GenerateProgramFile>
    <OutputType>Exe</OutputType>
    <StartupObject>DaxStudio.Controls.Tests.AutoGenerated.XunitAutoGeneratedEntryPoint</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <!-- Make sure to explicitly reference xunit -->
    <PackageReference Include="xunit.runner.visualstudio">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    
    <!-- Other dependencies -->
    <PackageReference Include="Xunit.StaFact" />
    <PackageReference Include="xunit.v3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DaxStudio.Controls\DaxStudio.Controls.csproj" />
  </ItemGroup>

</Project>